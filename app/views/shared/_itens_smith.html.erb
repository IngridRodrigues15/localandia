
<div class="modal fadebd-example-modal-lg" id="purchaseSmithModal" tabindex="-1" role="dialog" aria-labelledby="purchaseSmithModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="purchaseSmithModalLabel">Compras</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h5>Todos os items </h5>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Nome</th>
              <th scope="col">Preço</th>
              <th scope="col">Descrição</th>
              <th scope="col">quantidade</th>
              <th scope="col">Ação</th>
            </tr>
          </thead>
           <tbody>
            <% @itens.where(kind: 'Ferreiro').each do |item| %>
              <tr>
                <%= form_with(url: inventory_update_by_item_path) do |f| %>
                  <td><%= item.name %></td>
                  <td><%= item.price %></td>
                  <td><%= item.description %></td>
                  <td><%= f.number_field :quantity %></td>
                  <td>
                    <%= f.hidden_field :character_id %>
                    <%= f.hidden_field :item_id, value: item.id %>
                    <%= f.submit "Adicionar" %>
                  </td>
                <% end %>
              </tr>
            <% end %>
           </tbody>
         </table>
      </div>
    </div>
  </div>
</div>
